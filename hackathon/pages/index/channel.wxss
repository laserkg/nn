page {
  position: relative;
  padding-top: 86rpx!important;
}
.channel-container {
  position: fixed;
  top: 0;
  display: flex;
  width: 100%;
  flex-direction: row;
  /*justify-content: space-between;*/
  justify-content: space-around;
  padding-top: 20rpx;
  border-bottom: 1px solid hsla(0,0%,87%,.6);
  background-color: white;
  z-index: 10;
}
.channel-item {
  height: 60rpx;
}
.channel-item-active {
  border-bottom: 6rpx solid #f85959;
  color: #f85959;
}
.pulldown-loading {
  position: absolute;
  top: 30rpx;
  width: 100%;
  /*padding-bottom: 20rpx;*/
  color: #999;
  font-size: 28rpx;
  text-align: center;
  /*background: #DCDCDC;*/
}
.pulldown-info-box {
  width: 100%;
  color: #2a90d7;
}
.pulldown-info {
  display: block;
  width: 65%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  margin-top: -80rpx;
  background-color: rgba(213,233,247,.9);
  transition: all 0.4s;
  opacity: 0;
  text-align: center;  
  font-size: 28rpx;
}
.pulldown-info-show {
  width: 100%;
  height: 80rpx;
  margin-top: 0rpx;
  line-height: 80rpx;
  transition: all 0.4s;
  opacity: 1;
}
