.player {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 120rpx;
  width: 100%;
  border-radius: 2px;
  border: lightgray 1px solid;
  background: snow;
  z-index: 4;
}

.player-image {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  height: 120rpx;
  width: 120rpx;
}

.player-image-button {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 5;
}

